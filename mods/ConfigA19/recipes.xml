<configs>
	<append xpath="/recipes">

		<recipe name="ocbBlockWoodBarsVariantHelper" count="1"
				craft_area="workbench" material_based="false">
			<ingredient name="resourceWood" count="10"/>
		</recipe>

		<recipe name="ocbBlockIronBarsVariantHelper" count="1"
				craft_area="forge" material_based="true">
			<ingredient name="unit_iron" count="100" />
			<ingredient name="unit_clay" count="20" />
		</recipe>

		<recipe name="ocbBlockSteelBarsVariantHelper" count="1"
				craft_area="forge" material_based="true"
				craft_tool="toolForgeCrucible">
			<ingredient name="unit_iron" count="100" />
			<ingredient name="unit_clay" count="20" />
			<ingredient name="unit_lead" count="20" />
		</recipe>

	</append>

	<!-- remove original recipes (replaced by ours) -->
	<remove xpath="/recipes/recipe[@name='woodBars']"/>
	<remove xpath="/recipes/recipe[@name='woodBarsCentered']"/>
	<remove xpath="/recipes/recipe[@name='ironBars']"/>
	<remove xpath="/recipes/recipe[@name='ironBarsCentered']"/>

</configs>
